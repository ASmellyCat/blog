---
const base = import.meta.env.BASE_URL;

const categories = [
  { cn: '故事', en: 'Stories', href: `${base}/stories`, neonClass: 'neon-cyan', glowClass: 'glow-cyan', boxGlowClass: 'box-glow-cyan', borderColor: 'rgba(0, 240, 255, 0.3)' },
  { cn: '心情', en: 'Feelings', href: `${base}/feelings`, neonClass: 'neon-pink', glowClass: 'glow-pink', boxGlowClass: 'box-glow-pink', borderColor: 'rgba(255, 45, 120, 0.3)' },
  { cn: '随笔', en: 'Essays', href: `${base}/essays`, neonClass: 'neon-green', glowClass: 'glow-green', boxGlowClass: 'box-glow-green', borderColor: 'rgba(57, 255, 20, 0.3)' },
  { cn: '梦境', en: 'Dreams', href: `${base}/dreams`, neonClass: 'neon-purple', glowClass: 'glow-purple', boxGlowClass: 'box-glow-purple', borderColor: 'rgba(191, 64, 255, 0.3)' },
];
---

<!-- Mobile: horizontal scrollable row -->
<nav class="lg:hidden sticky top-0 z-50 bg-[var(--color-bg)]/80 backdrop-blur-xl border-b border-[var(--color-border)]">
  <div class="px-5 py-3 flex items-center gap-4">
    <a href={base} class="shrink-0 neon-link" style="font-family: 'Orbitron', sans-serif;">
      <span class="text-xs font-bold tracking-[0.2em] uppercase dream-subtitle">梦游仙境</span>
    </a>
    <div class="flex gap-2 overflow-x-auto no-scrollbar">
      {categories.map((cat) => (
        <a
          href={cat.href}
          class:list={[
            "nav-pill shrink-0 px-3 py-1.5 rounded-full text-[11px] tracking-wide",
            "bg-white/[0.03] backdrop-blur-md border border-white/[0.08]",
            "text-[var(--color-text-muted)] transition-all duration-300"
          ]}
          data-neon={cat.neonClass}
          data-glow={cat.glowClass}
          data-box-glow={cat.boxGlowClass}
          data-border-color={cat.borderColor}
        >
          {cat.cn}<span class="mx-0.5 opacity-30">/</span>{cat.en}
        </a>
      ))}
    </div>
  </div>

    </nav>

<!-- Desktop: floating fixed sidebar with animated border -->
<aside class="hidden lg:block fixed left-4 top-4 bottom-4 w-[240px] z-50 animated-border rounded-2xl">
  <div class="h-full flex flex-col justify-between p-7 bg-[var(--color-bg)]/90 backdrop-blur-xl rounded-2xl">
    <div>
      <!-- Blog title in sidebar -->
      <a href={base} class="block mb-12 group">
        <span class="block text-sm font-bold tracking-[0.15em] uppercase dream-subtitle" style="font-family: 'Orbitron', sans-serif;">coconut的</span>
        <span class="block text-sm font-bold tracking-[0.15em] uppercase dream-subtitle mt-0.5" style="font-family: 'Orbitron', sans-serif;">梦游仙境</span>
      </a>
      <nav>
        <ul class="space-y-3">
          {categories.map((cat) => (
            <li>
              <a
                href={cat.href}
                class:list={[
                  "nav-pill group block px-4 py-3 rounded-xl",
                  "bg-white/[0.03] backdrop-blur-md",
                  "border border-white/[0.06]",
                  "transition-all duration-300 ease-out"
                ]}
                data-neon={cat.neonClass}
                data-glow={cat.glowClass}
                data-box-glow={cat.boxGlowClass}
                data-border-color={cat.borderColor}
              >
                <span class="block text-base font-light tracking-wide text-[var(--color-text)] transition-all duration-300 nav-cn">
                  {cat.cn}
                </span>
                <span class="block text-[10px] tracking-[0.2em] uppercase text-[var(--color-text-muted)] mt-0.5 font-light transition-all duration-300 nav-en" style="font-family: 'Orbitron', sans-serif;">
                  {cat.en}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <!-- Music Player -->
      <div class="music-player mt-6">
        <div class="music-player__container">
          <div class="music-player__visualizer" id="visualizer">
            <div class="viz-bar"></div><div class="viz-bar"></div><div class="viz-bar"></div>
            <div class="viz-bar"></div><div class="viz-bar"></div><div class="viz-bar"></div>
            <div class="viz-bar"></div><div class="viz-bar"></div><div class="viz-bar"></div>
          </div>
          <div class="music-player__info">
            <div class="music-player__title" id="trackTitle">—</div>
            <div class="music-player__progress">
              <div class="music-player__progress-bar" id="progressBar"></div>
            </div>
          </div>
          <div class="music-player__controls">
            <button id="prevTrack" class="music-ctrl" title="Previous">⟨</button>
            <button id="playPause" class="music-ctrl music-ctrl--play" title="Play">▶</button>
            <button id="nextTrack" class="music-ctrl" title="Next">⟩</button>
          </div>
        </div>
        <audio id="audioPlayer" preload="auto"></audio>
      </div>
    </div>
    <div>
      <a
        href={`${base}/about`}
        class="neon-link text-[10px] tracking-[0.2em] uppercase text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors duration-300 font-light"
        style="font-family: 'Orbitron', sans-serif;"
      >
        About
      </a>
    </div>
  </div>
</aside>

<!-- Mobile Music Player - fixed bottom -->
<div class="music-player-mobile lg:hidden fixed bottom-0 left-0 right-0 z-40">
  <div class="bg-[var(--color-bg)]/95 backdrop-blur-xl border-t border-[var(--color-border)] px-4 py-2">
    <div class="flex items-center gap-3">
      <button id="playPauseMobile" class="music-ctrl music-ctrl--play text-xs w-8 h-8 shrink-0" title="Play">▶</button>
      <div class="flex-1 min-w-0">
        <div class="text-[9px] tracking-[0.15em] text-[var(--color-text-muted)] truncate" id="trackTitleMobile" style="font-family: 'Orbitron', sans-serif;">—</div>
        <div class="music-player__progress mt-1">
          <div class="music-player__progress-bar" id="progressBarMobile"></div>
        </div>
      </div>
      <div class="flex gap-1 shrink-0">
        <button id="prevTrackMobile" class="music-ctrl text-xs px-1">⟨</button>
        <button id="nextTrackMobile" class="music-ctrl text-xs px-1">⟩</button>
      </div>
    </div>
  </div>
</div>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<script>
  document.querySelectorAll('.nav-pill').forEach((pill) => {
    const el = pill as HTMLElement;
    const neonClass = el.dataset.neon!;
    const glowClass = el.dataset.glow!;
    const boxGlowClass = el.dataset.boxGlow!;
    const borderColor = el.dataset.borderColor!;

    el.addEventListener('mouseenter', () => {
      const cn = el.querySelector('.nav-cn');
      const en = el.querySelector('.nav-en');
      if (cn) { cn.classList.add(neonClass, glowClass); }
      if (en) { en.classList.add(neonClass, glowClass); }
      if (!cn && !en) { el.classList.add(neonClass, glowClass); }
      el.classList.add(boxGlowClass);
      el.style.borderColor = borderColor;
    });

    el.addEventListener('mouseleave', () => {
      const cn = el.querySelector('.nav-cn');
      const en = el.querySelector('.nav-en');
      if (cn) { cn.classList.remove(neonClass, glowClass); }
      if (en) { en.classList.remove(neonClass, glowClass); }
      if (!cn && !en) { el.classList.remove(neonClass, glowClass); }
      el.classList.remove(boxGlowClass);
      el.style.borderColor = '';
    });
  });
</script>


<script>
  // Music Player - handles both desktop and mobile
  const tracks = [
    { title: 'LOOSE', src: '/blog/music/loose.mp3' },
    { title: 'LO QUE SIENTO', src: '/blog/music/lo-que-siento.mp3' },
  ];
  
  let currentTrack = 0;
  let isPlaying = false;
  const audio = document.getElementById('audioPlayer');
  
  // Desktop elements
  const playBtn = document.getElementById('playPause');
  const titleEl = document.getElementById('trackTitle');
  const progressBar = document.getElementById('progressBar');
  const playerEl = document.querySelector('.music-player');
  
  // Mobile elements
  const playBtnM = document.getElementById('playPauseMobile');
  const titleElM = document.getElementById('trackTitleMobile');
  const progressBarM = document.getElementById('progressBarMobile');
  const playerElM = document.querySelector('.music-player-mobile');

  function loadTrack(index) {
    if (!audio || !tracks[index]) return;
    currentTrack = index;
    audio.src = tracks[index].src;
    if (titleEl) titleEl.textContent = tracks[index].title;
    if (titleElM) titleElM.textContent = tracks[index].title;
  }

  function syncUI() {
    const icon = isPlaying ? '⏸' : '▶';
    if (playBtn) playBtn.textContent = icon;
    if (playBtnM) playBtnM.textContent = icon;
    if (playerEl) playerEl.classList.toggle('playing', isPlaying);
    if (playerElM) playerElM.classList.toggle('playing', isPlaying);
  }

  function togglePlay() {
    if (!audio) return;
    if (isPlaying) {
      audio.pause();
      isPlaying = false;
    } else {
      audio.play().then(() => { isPlaying = true; }).catch(() => {});
    }
    syncUI();
  }

  if (audio) {
    loadTrack(0);

    audio.addEventListener('timeupdate', () => {
      if (audio.duration) {
        const pct = (audio.currentTime / audio.duration * 100) + '%';
        if (progressBar) progressBar.style.width = pct;
        if (progressBarM) progressBarM.style.width = pct;
      }
    });

    audio.addEventListener('ended', () => {
      currentTrack = (currentTrack + 1) % tracks.length;
      loadTrack(currentTrack);
      audio.play().catch(() => {});
    });

    audio.addEventListener('play', () => { isPlaying = true; syncUI(); });
    audio.addEventListener('pause', () => { isPlaying = false; syncUI(); });
  }

  // Desktop controls
  if (playBtn) playBtn.addEventListener('click', togglePlay);
  document.getElementById('prevTrack')?.addEventListener('click', () => {
    currentTrack = (currentTrack - 1 + tracks.length) % tracks.length;
    loadTrack(currentTrack);
    if (isPlaying) audio.play().catch(() => {});
  });
  document.getElementById('nextTrack')?.addEventListener('click', () => {
    currentTrack = (currentTrack + 1) % tracks.length;
    loadTrack(currentTrack);
    if (isPlaying) audio.play().catch(() => {});
  });

  // Mobile controls
  if (playBtnM) playBtnM.addEventListener('click', togglePlay);
  document.getElementById('prevTrackMobile')?.addEventListener('click', () => {
    currentTrack = (currentTrack - 1 + tracks.length) % tracks.length;
    loadTrack(currentTrack);
    if (isPlaying) audio.play().catch(() => {});
  });
  document.getElementById('nextTrackMobile')?.addEventListener('click', () => {
    currentTrack = (currentTrack + 1) % tracks.length;
    loadTrack(currentTrack);
    if (isPlaying) audio.play().catch(() => {});
  });

  // Progress click (desktop)
  document.querySelector('.music-player .music-player__progress')?.addEventListener('click', (e) => {
    const rect = e.currentTarget.getBoundingClientRect();
    const pct = (e.clientX - rect.left) / rect.width;
    if (audio?.duration) audio.currentTime = pct * audio.duration;
  });
</script>