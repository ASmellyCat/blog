---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const categoryMeta: Record<string, { cn: string; en: string; neonClass: string }> = {
  stories: { cn: '故事', en: 'Stories', neonClass: 'neon-cyan' },
  feelings: { cn: '心情', en: 'Feelings', neonClass: 'neon-pink' },
  essays: { cn: '随笔', en: 'Essays', neonClass: 'neon-green' },
  dreams: { cn: '梦境', en: 'Dreams', neonClass: 'neon-purple' },
};

const base = import.meta.env.BASE_URL;
const categorySlug = post.data.category;
const meta = categoryMeta[categorySlug];
---

<BaseLayout title={`${post.data.title} — blog`} description={post.data.description}>
  <Navigation />
  <div class="lg:pl-[240px]">
    <main class="max-w-3xl mx-auto px-8 py-16 lg:py-24">
      <article>
        <header class="mb-14">
          <div class="flex items-center gap-4 mb-6">
            <a
              href={`${base}${categorySlug}`}
              class:list={[
                "text-xs tracking-[0.2em] uppercase font-medium transition-colors duration-300",
                meta?.neonClass || 'text-[var(--color-text-muted)]'
              ]}
            >
              {meta ? `${meta.cn} / ${meta.en}` : categorySlug}
            </a>
            <span class="text-[var(--color-border)]">&middot;</span>
            <time
              datetime={post.data.date.toISOString()}
              class="text-xs text-[var(--color-text-muted)] tracking-wider font-light"
            >
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
          </div>
          <h1 class="text-4xl lg:text-5xl font-medium leading-tight tracking-tight">{post.data.title}</h1>
          {post.data.description && (
            <p class="mt-6 text-lg text-[var(--color-text-muted)] leading-relaxed font-light">{post.data.description}</p>
          )}
        </header>
        <div class="prose-custom">
          <Content />
        </div>
      </article>
      <div class="mt-20 pt-10 border-t border-[var(--color-border)]">
        <a
          href={`${base}${categorySlug}`}
          class:list={[
            "text-sm font-light tracking-wide transition-all duration-300 hover-back-link",
            "text-[var(--color-text-muted)]"
          ]}
          data-neon={meta?.neonClass}
        >
          &larr; Back to {meta ? `${meta.cn} / ${meta.en}` : categorySlug}
        </a>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .prose-custom :global(p) {
    margin-bottom: 1.75rem;
    line-height: 2;
    color: var(--color-text);
    font-weight: 300;
  }

  .prose-custom :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose-custom :global(strong) {
    color: var(--color-text);
    font-weight: 500;
  }

  .prose-custom :global(em) {
    font-style: italic;
  }

  .prose-custom :global(h2) {
    font-size: 1.75rem;
    font-weight: 500;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .prose-custom :global(h3) {
    font-size: 1.35rem;
    font-weight: 500;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .prose-custom :global(blockquote) {
    border-left: 2px solid var(--color-neon-cyan);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--color-text-muted);
    font-style: italic;
    font-weight: 300;
  }

  .prose-custom :global(code) {
    background: var(--color-surface);
    padding: 0.2rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
  }

  .prose-custom :global(pre) {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid var(--color-border);
  }

  .prose-custom :global(ul),
  .prose-custom :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
    color: var(--color-text);
  }

  .prose-custom :global(li) {
    margin-bottom: 0.625rem;
    line-height: 1.9;
    font-weight: 300;
  }

  .prose-custom :global(hr) {
    border-color: var(--color-border);
    margin: 2.5rem 0;
  }
</style>

<script>
  document.querySelectorAll('.hover-back-link').forEach((link) => {
    const el = link as HTMLElement;
    const neonClass = el.dataset.neon;
    if (neonClass) {
      el.addEventListener('mouseenter', () => el.classList.add(neonClass));
      el.addEventListener('mouseleave', () => el.classList.remove(neonClass));
    }
  });
</script>
