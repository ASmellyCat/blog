---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const categoryMeta: Record<string, { cn: string; en: string; neonClass: string; glowClass: string; borderColor: string }> = {
  stories: { cn: '故事', en: 'Stories', neonClass: 'neon-cyan', glowClass: 'glow-cyan', borderColor: 'rgba(0, 240, 255, 0.3)' },
  feelings: { cn: '心情', en: 'Feelings', neonClass: 'neon-pink', glowClass: 'glow-pink', borderColor: 'rgba(255, 45, 120, 0.3)' },
  essays: { cn: '随笔', en: 'Essays', neonClass: 'neon-green', glowClass: 'glow-green', borderColor: 'rgba(57, 255, 20, 0.3)' },
  dreams: { cn: '梦境', en: 'Dreams', neonClass: 'neon-purple', glowClass: 'glow-purple', borderColor: 'rgba(191, 64, 255, 0.3)' },
};

const base = import.meta.env.BASE_URL;
const categorySlug = post.data.category;
const meta = categoryMeta[categorySlug];
---

<BaseLayout title={`${post.data.title} — coconut的梦游仙境`} description={post.data.description}>
  <Navigation />
  <div class="lg:pl-[260px]">
    <main class="max-w-3xl mx-auto px-8 py-16 lg:py-24">
      <article>
        <header class="mb-14">
          <div class="flex items-center gap-3 mb-6">
            <a
              href={`${base}/${categorySlug}`}
              class:list={[
                "px-2.5 py-0.5 rounded-full text-[10px] tracking-[0.15em] uppercase font-medium border neon-link transition-all duration-300",
                meta?.neonClass || 'text-[var(--color-text-muted)]'
              ]}
              style={`border-color: ${meta?.borderColor || 'rgba(255,255,255,0.1)'};`}
            >
              {meta ? `${meta.cn} / ${meta.en}` : categorySlug}
            </a>
            <time
              datetime={post.data.date.toISOString()}
              class="text-[11px] text-[var(--color-text-muted)] tracking-wider font-light"
              style="font-family: 'Orbitron', sans-serif;"
            >
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })}
            </time>
          </div>
          <h1 class="text-3xl lg:text-4xl font-bold leading-tight tracking-tight" style="font-family: 'Orbitron', sans-serif;">{post.data.title}</h1>
          {post.data.description && (
            <p class="mt-6 text-base text-[var(--color-text-muted)] leading-relaxed font-light">{post.data.description}</p>
          )}
        </header>
        <div class="content-panel p-6 lg:p-8">
          <div class="prose-custom">
            <Content />
          </div>
        </div>
      </article>
      <div class="mt-16 pt-8 border-t border-[var(--color-border)]">
        <a
          href={`${base}/${categorySlug}`}
          class:list={[
            "neon-link text-sm font-light tracking-wide transition-all duration-300",
            "text-[var(--color-text-muted)]",
            `hover:${meta?.neonClass}`
          ]}
          data-neon={meta?.neonClass}
        >
          &larr; Back to {meta ? `${meta.cn} / ${meta.en}` : categorySlug}
        </a>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .prose-custom :global(p) {
    margin-bottom: 1.75rem;
    line-height: 2;
    color: var(--color-text);
    font-weight: 300;
  }

  .prose-custom :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose-custom :global(strong) {
    color: var(--color-text);
    font-weight: 500;
  }

  .prose-custom :global(em) {
    font-style: italic;
  }

  .prose-custom :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
    font-family: 'Orbitron', sans-serif;
  }

  .prose-custom :global(h3) {
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-family: 'Orbitron', sans-serif;
  }

  .prose-custom :global(blockquote) {
    border-left: 2px solid var(--color-neon-cyan);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--color-text-muted);
    font-style: italic;
    font-weight: 300;
  }

  .prose-custom :global(code) {
    background: var(--color-surface);
    padding: 0.2rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    color: var(--color-neon-cyan);
  }

  .prose-custom :global(pre) {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid var(--color-border);
  }

  .prose-custom :global(ul),
  .prose-custom :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
    color: var(--color-text);
  }

  .prose-custom :global(li) {
    margin-bottom: 0.625rem;
    line-height: 1.9;
    font-weight: 300;
  }

  .prose-custom :global(hr) {
    border-color: var(--color-border);
    margin: 2.5rem 0;
  }
</style>

<script>
  document.querySelectorAll('[data-neon]').forEach((link) => {
    const el = link as HTMLElement;
    const neonClass = el.dataset.neon;
    if (neonClass) {
      el.addEventListener('mouseenter', () => el.classList.add(neonClass));
      el.addEventListener('mouseleave', () => el.classList.remove(neonClass));
    }
  });
</script>
