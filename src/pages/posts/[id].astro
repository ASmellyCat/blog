---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const categoryLabels: Record<string, { cn: string; en: string }> = {
  stories: { cn: '故事', en: 'Stories' },
  feelings: { cn: '心情', en: 'Feelings' },
  essays: { cn: '随笔', en: 'Essays' },
  dreams: { cn: '梦境', en: 'Dreams' },
};

const base = import.meta.env.BASE_URL;
const categorySlug = post.data.category;
const label = categoryLabels[categorySlug];
---

<BaseLayout title={`${post.data.title} — blog`} description={post.data.description}>
  <div class="max-w-5xl mx-auto px-6 py-12 lg:flex lg:gap-16">
    <!-- Sidebar -->
    <aside class="lg:w-48 shrink-0 mb-8 lg:mb-0 lg:pt-2">
      <a
        href={`${base}${categorySlug}`}
        class="text-xs uppercase tracking-widest text-[var(--color-accent)] font-medium hover:text-[var(--color-text)] transition-colors"
      >
        {label ? `${label.cn} / ${label.en}` : categorySlug}
      </a>
      <div class="mt-3">
        <time
          datetime={post.data.date.toISOString()}
          class="text-sm text-[var(--color-text-muted)]"
        >
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
      </div>
    </aside>
    <!-- Main content -->
    <main class="flex-1 min-w-0">
      <article>
        <header class="mb-10">
          <h1 class="font-serif text-4xl font-bold leading-tight">{post.data.title}</h1>
          {post.data.description && (
            <p class="mt-4 text-lg text-[var(--color-text-muted)] leading-relaxed">{post.data.description}</p>
          )}
        </header>
        <div class="prose-custom">
          <Content />
        </div>
      </article>
      <div class="mt-16 pt-8 border-t border-[var(--color-border)]">
        <a
          href={`${base}${categorySlug}`}
          class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors"
        >
          &larr; Back to {label ? `${label.cn} / ${label.en}` : categorySlug}
        </a>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .prose-custom :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.9;
    color: var(--color-text);
  }

  .prose-custom :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose-custom :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose-custom :global(em) {
    font-style: italic;
  }

  .prose-custom :global(h2) {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .prose-custom :global(h3) {
    font-family: var(--font-serif);
    font-size: 1.35rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .prose-custom :global(blockquote) {
    border-left: 2px solid var(--color-accent);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .prose-custom :global(code) {
    background: var(--color-surface);
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .prose-custom :global(pre) {
    background: var(--color-surface);
    padding: 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose-custom :global(ul),
  .prose-custom :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
    color: var(--color-text);
  }

  .prose-custom :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }

  .prose-custom :global(hr) {
    border-color: var(--color-border);
    margin: 2rem 0;
  }
</style>
