---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const categoryLabels: Record<string, string> = {
  sparks: 'Sparks',
  murmurs: 'Murmurs',
  footnotes: 'Footnotes',
  'midnight-screenings': 'Midnight Screenings',
};

const base = import.meta.env.BASE_URL;
const categorySlug = post.data.category;
---

<BaseLayout title={`${post.data.title} â€” blog`} description={post.data.description}>
  <article>
    <header class="mb-12">
      <div class="flex items-center gap-3 mb-4">
        <a
          href={`${base}${categorySlug}`}
          class="text-xs uppercase tracking-widest text-[var(--color-text-muted)] hover:text-white transition-colors"
        >
          {categoryLabels[categorySlug] || categorySlug}
        </a>
        <span class="text-[var(--color-border)]">&middot;</span>
        <time
          datetime={post.data.date.toISOString()}
          class="text-xs text-[var(--color-text-muted)]"
        >
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
      </div>
      <h1 class="text-4xl font-semibold tracking-tight">{post.data.title}</h1>
      {post.data.description && (
        <p class="mt-4 text-lg text-[var(--color-text-muted)]">{post.data.description}</p>
      )}
    </header>
    <div class="prose-custom">
      <Content />
    </div>
  </article>
  <div class="mt-16 pt-8 border-t border-[var(--color-border)]">
    <a
      href={`${base}${categorySlug}`}
      class="text-sm text-[var(--color-text-muted)] hover:text-white transition-colors"
    >
      &larr; Back to {categoryLabels[categorySlug] || categorySlug}
    </a>
  </div>
</BaseLayout>

<style>
  .prose-custom :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--color-accent);
  }

  .prose-custom :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose-custom :global(strong) {
    color: var(--color-text);
    font-weight: 500;
  }

  .prose-custom :global(em) {
    font-style: italic;
  }

  .prose-custom :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .prose-custom :global(h3) {
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .prose-custom :global(blockquote) {
    border-left: 2px solid var(--color-border);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .prose-custom :global(code) {
    background: var(--color-surface);
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .prose-custom :global(pre) {
    background: var(--color-surface);
    padding: 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose-custom :global(ul),
  .prose-custom :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
    color: var(--color-accent);
  }

  .prose-custom :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .prose-custom :global(hr) {
    border-color: var(--color-border);
    margin: 2rem 0;
  }
</style>
