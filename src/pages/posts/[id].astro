---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const grouped: Record<string, { zh?: typeof allPosts[0]; en?: typeof allPosts[0] }> = {};
  for (const post of allPosts) {
    const slug = post.id.replace(/\/(zh|en)$/, '');
    if (!grouped[slug]) grouped[slug] = {};
    grouped[slug][post.data.lang] = post;
  }
  return Object.entries(grouped).map(([slug, posts]) => ({
    params: { id: slug },
    props: { zhPost: posts.zh, enPost: posts.en },
  }));
}

const { zhPost, enPost } = Astro.props;
const post = zhPost || enPost!;
const zhRender = zhPost ? await render(zhPost) : null;
const enRender = enPost ? await render(enPost) : null;

const categoryMeta: Record<string, { cn: string; en: string; neonClass: string; glowClass: string; borderColor: string }> = {
  stories: { cn: '故事', en: 'Stories', neonClass: 'neon-cyan', glowClass: 'glow-cyan', borderColor: 'rgba(0, 240, 255, 0.3)' },
  feelings: { cn: '心情', en: 'Feelings', neonClass: 'neon-pink', glowClass: 'glow-pink', borderColor: 'rgba(255, 45, 120, 0.3)' },
  essays: { cn: '随笔', en: 'Essays', neonClass: 'neon-green', glowClass: 'glow-green', borderColor: 'rgba(57, 255, 20, 0.3)' },
  dreams: { cn: '梦境', en: 'Dreams', neonClass: 'neon-purple', glowClass: 'glow-purple', borderColor: 'rgba(191, 64, 255, 0.3)' },
};

const base = import.meta.env.BASE_URL;
const categorySlug = post.data.category;
const meta = categoryMeta[categorySlug];
---

<BaseLayout title={`${post.data.title} — coconut的梦游仙境`} description={post.data.description}>
  <Navigation />
  <div class="lg:pl-[260px]">
    <main class="max-w-3xl mx-auto px-8 py-16 lg:py-24">
      <article>
        <header class="mb-14">
          <div class="flex items-center gap-3 mb-6">
            <a
              href={`${base}/${categorySlug}`}
              class:list={[
                "px-2.5 py-0.5 rounded-full text-[10px] tracking-[0.15em] uppercase font-medium border neon-link transition-all duration-300",
                meta?.neonClass || 'text-[var(--color-text-muted)]'
              ]}
              style={`border-color: ${meta?.borderColor || 'rgba(255,255,255,0.1)'};`}
            >
              {meta ? `${meta.cn} / ${meta.en}` : categorySlug}
            </a>
            <time
              datetime={post.data.date.toISOString()}
              class="text-[11px] text-[var(--color-text-muted)] tracking-wider font-light"
              style="font-family: 'Orbitron', sans-serif;"
            >
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })}
            </time>
            {zhPost && enPost && (
              <div class="lang-toggle ml-auto flex items-center gap-0 text-xs" style="font-family: 'Orbitron', sans-serif;">
                <button id="btn-zh" class="lang-btn active px-2.5 py-1 rounded-l border border-r-0 transition-all duration-300">中</button>
                <button id="btn-en" class="lang-btn px-2.5 py-1 rounded-r border transition-all duration-300">EN</button>
              </div>
            )}
          </div>
          <div>
            <h1 class="text-3xl lg:text-4xl font-bold leading-tight tracking-tight" style="font-family: 'Orbitron', sans-serif;">
              {zhPost && enPost ? `${zhPost.data.title} | ${enPost.data.title}` : post.data.title}
            </h1>
            <div id="desc-zh">
              {zhPost?.data.description && (
                <p class="mt-6 text-base text-[var(--color-text-muted)] leading-relaxed font-light">{zhPost.data.description}</p>
              )}
            </div>
            <div id="desc-en" style="display:none;">
              {enPost?.data.description && (
                <p class="mt-6 text-base text-[var(--color-text-muted)] leading-relaxed font-light">{enPost.data.description}</p>
              )}
            </div>
          </div>
        </header>
        <div class="content-panel p-6 lg:p-8">
          {zhRender && (
            <div id="content-zh" class="prose-custom">
              <zhRender.Content />
            </div>
          )}
          {enRender && (
            <div id="content-en" class="prose-custom" style="display:none;">
              <enRender.Content />
            </div>
          )}
        </div>
      </article>
      <div class="mt-16 pt-8 border-t border-[var(--color-border)]">
        <a
          href={`${base}/${categorySlug}`}
          class:list={[
            "neon-link text-sm font-light tracking-wide transition-all duration-300",
            "text-[var(--color-text-muted)]",
            `hover:${meta?.neonClass}`
          ]}
          data-neon={meta?.neonClass}
        >
          &larr; Back to {meta ? `${meta.cn} / ${meta.en}` : categorySlug}
        </a>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .lang-btn {
    border-color: var(--color-border);
    color: var(--color-text-muted);
    background: transparent;
    cursor: pointer;
    letter-spacing: 0.05em;
    font-size: 11px;
    line-height: 1;
  }
  .lang-btn:hover {
    border-color: var(--color-neon-cyan);
    color: var(--color-neon-cyan);
  }
  .lang-btn.active {
    border-color: var(--color-neon-cyan);
    color: var(--color-neon-cyan);
    background: rgba(0, 240, 255, 0.08);
    text-shadow: 0 0 8px rgba(0, 240, 255, 0.5);
  }

  .prose-custom :global(p) {
    margin-bottom: 1.75rem;
    line-height: 2;
    color: var(--color-text);
    font-weight: 300;
  }

  .prose-custom :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose-custom :global(strong) {
    color: var(--color-text);
    font-weight: 500;
  }

  .prose-custom :global(em) {
    font-style: italic;
  }

  .prose-custom :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
    font-family: 'Orbitron', sans-serif;
  }

  .prose-custom :global(h3) {
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-family: 'Orbitron', sans-serif;
  }

  .prose-custom :global(blockquote) {
    border-left: 2px solid var(--color-neon-cyan);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--color-text-muted);
    font-style: italic;
    font-weight: 300;
  }

  .prose-custom :global(code) {
    background: var(--color-surface);
    padding: 0.2rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    color: var(--color-neon-cyan);
  }

  .prose-custom :global(pre) {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid var(--color-border);
  }

  .prose-custom :global(ul),
  .prose-custom :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
    color: var(--color-text);
  }

  .prose-custom :global(li) {
    margin-bottom: 0.625rem;
    line-height: 1.9;
    font-weight: 300;
  }

  .prose-custom :global(hr) {
    border-color: var(--color-border);
    margin: 2.5rem 0;
  }
</style>

<script is:inline>
  window.__setLang = function(lang) {
    var descZh = document.getElementById('desc-zh');
    var descEn = document.getElementById('desc-en');
    var contentZh = document.getElementById('content-zh');
    var contentEn = document.getElementById('content-en');
    var btnZh = document.getElementById('btn-zh');
    var btnEn = document.getElementById('btn-en');
    if (lang === 'en') {
      if (descZh) descZh.style.display = 'none';
      if (descEn) descEn.style.display = '';
      if (contentZh) contentZh.style.display = 'none';
      if (contentEn) contentEn.style.display = '';
      if (btnZh) btnZh.classList.remove('active');
      if (btnEn) btnEn.classList.add('active');
    } else {
      if (descZh) descZh.style.display = '';
      if (descEn) descEn.style.display = 'none';
      if (contentZh) contentZh.style.display = '';
      if (contentEn) contentEn.style.display = 'none';
      if (btnZh) btnZh.classList.add('active');
      if (btnEn) btnEn.classList.remove('active');
    }
    localStorage.setItem('preferred-lang', lang);
  };
  // Auto-init & event delegation (survives SPA navigation)
  (function() {
    // Event delegation on document - always works
    if (!window.__langDelegated) {
      window.__langDelegated = true;
      document.addEventListener('click', function(e) {
        var btn = e.target.closest('#btn-zh, #btn-en');
        if (!btn) return;
        if (btn.id === 'btn-zh') window.__setLang('zh');
        if (btn.id === 'btn-en') window.__setLang('en');
      });
    }
    // Init current page
    var btnZh = document.getElementById('btn-zh');
    if (!btnZh) return;
    var saved = localStorage.getItem('preferred-lang');
    if (saved) { window.__setLang(saved); }
    else {
      var bl = navigator.language || '';
      window.__setLang(bl.startsWith('zh') ? 'zh' : 'en');
    }
  })();
</script>

<script>
  document.querySelectorAll('[data-neon]').forEach((link) => {
    const el = link as HTMLElement;
    const neonClass = el.dataset.neon;
    if (neonClass) {
      el.addEventListener('mouseenter', () => el.classList.add(neonClass));
      el.addEventListener('mouseleave', () => el.classList.remove(neonClass));
    }
  });
</script>
