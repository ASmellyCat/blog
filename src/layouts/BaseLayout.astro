---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A personal blog' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0A0A0A" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-[var(--color-bg)] text-[var(--color-text)]">
    <slot />
    <footer class="pl-0 lg:pl-[240px]">
      <div class="max-w-3xl mx-auto px-8 pb-16 pt-20">
        <div class="border-t border-[var(--color-border)] pt-8">
          <p class="text-xs text-[var(--color-text-muted)] tracking-widest font-light">&copy; {new Date().getFullYear()}</p>
        </div>
      </div>
    </footer>
  </body>
</html>
